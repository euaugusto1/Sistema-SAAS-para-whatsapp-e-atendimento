# Staging Environment Variables
# Copy this file to .env.staging and fill in the values

# Application
NODE_ENV=staging
PORT=3001
FRONTEND_URL=https://staging.yourdomain.com

# Database
DATABASE_URL=postgresql://user:password@postgres:5432/saas_staging?schema=public
DIRECT_URL=postgresql://user:password@postgres:5432/saas_staging?schema=public

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis-staging-password

# JWT
JWT_SECRET=staging-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=staging-refresh-secret-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
ALLOWED_ORIGINS=https://staging.yourdomain.com
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100
ENCRYPTION_KEY=staging-encryption-key-32-chars
SESSION_SECRET=staging-session-secret-min-32

# Stripe (Test Mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_test_webhook_secret

# MercadoPago (Test Mode)
MERCADOPAGO_ACCESS_TOKEN=TEST-your-test-access-token
MERCADOPAGO_PUBLIC_KEY=TEST-your-test-public-key
MERCADOPAGO_BACK_URL=https://staging.yourdomain.com/subscription

# Email
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-password
EMAIL_FROM=noreply@staging.yourdomain.com

# WhatsApp/Evolution API
EVOLUTION_API_URL=https://staging-evolution.yourdomain.com
EVOLUTION_API_KEY=staging-evolution-api-key

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
SENTRY_ENVIRONMENT=staging

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=staging-grafana-password

# PostgreSQL
POSTGRES_DB=saas_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging-postgres-password
POSTGRES_PORT=5432
